rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper for admin check
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // User documents
    match /users/{userId} {
      // Users can read/write their own data
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
      
      // Campaigns subcollection
      match /campaigns/{campaignId} {
        allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
        
        // Messages subcollection
        match /messages/{messageId} {
          allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
        }
      }
    }
    
    // Public worlds (managed by admin)
    match /worlds/{worldId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Legacy public world modules (read-only)
    match /worldModules/{moduleId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Configuration (public read, admin write for pricing/API keys)
    match /config/{configId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Game engines (public read, admin write)
    match /gameEngines/{engineId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // AI Prompts (admin read/write)
    match /aiPrompts/{promptId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    // API Keys (admin read/write only)
    match /apiKeys/{provider} {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }
    
    // Settings (admin read/write, public read for ambiance)
    match /settings/{settingId} {
      allow read: if true; // Public read for ambiance settings
      allow write: if isAdmin();
    }
    
    // System stats (admin read/write)
    match /systemStats/{statId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
      
      match /daily/{dayId} {
        allow read: if isAdmin();
        allow write: if isAdmin();
      }
    }
  }
}
