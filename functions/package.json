{
    "name": "infinite-realms-functions",
    "version": "1.0.0",
    "description": "Firebase Cloud Functions for Infinite Realms AI Backend",
    "main": "lib/index.js",
    "scripts": {
        "build": "tsc",
        "build:watch": "tsc --watch",
        "serve": "npm run build && firebase emulators:start --only functions",
        "shell": "npm run build && firebase functions:shell",
        "start": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log"
    },
    "engines": {
        "node": "20"
    },
    "dependencies": {
        "@anthropic-ai/sdk": "^0.32.0",
        "@types/cors": "^2.8.19",
        "cors": "^2.8.5",
        "firebase-admin": "^12.0.0",
        "firebase-functions": "^5.0.0",
        "openai": "^4.68.0",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "typescript": "^5.4.0"
    },
    "private": true
}
